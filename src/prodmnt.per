ATTRIBUTES

BUTTON clear : clear, STYLE="rounded";
BUTTON save : save, STYLE="rounded green";
BUTTON close : close, STYLE="rounded red";

IMAGE sp2 : spacer, IMAGE="fa-fw", STRETCH=X, SIZEPOLICY=FIXED,STYLE="noborder";

GROUP pg2 : pg2, STYLE="collapsed", TEXT="Price / Costs", GRIDCHILDRENINPARENT;
GROUP pg3 : pg3, STYLE="collapsed", TEXT="Stock Levels", GRIDCHILDRENINPARENT;
GROUP pg4 : pg4, STYLE="collapsed", TEXT="Long Description", GRIDCHILDRENINPARENT;
--GROUP pg5 : pg5, TEXT="Image", GRIDCHILDRENINPARENT;

LABEL l001 : lcode, TEXT="Code", JUSTIFY=RIGHT;
f001 = FORMONLY.stock_code;
LABEL l002 : lcat, TEXT="Category", JUSTIFY=RIGHT;
COMBOBOX f002 = FORMONLY.stock_cat, INITIALIZER=cb_cat;
LABEL l003 : lpack, TEXT="Pack", JUSTIFY=RIGHT;
CHECKBOX f003 = FORMONLY.pack_flag, VALUECHECKED="P",VALUEUNCHECKED=" ";
LABEL l004 : lsupp, TEXT="Supplier", JUSTIFY=RIGHT;
COMBOBOX f004 = FORMONLY.supp_code, INITIALIZER=cb_supp;
LABEL l005 : lbc, TEXT="Bar Code", JUSTIFY=RIGHT;
f005 = FORMONLY.barcode;
LABEL l006 : ldesc, TEXT="Description", JUSTIFY=RIGHT;
f006 = FORMONLY.description;
LABEL l06a : lcolr, TEXT="Colour", JUSTIFY=RIGHT;
COMBOBOX f06a = FORMONLY.colour_code, INITIALIZER=cb_colours;
WEBCOMPONENT col = FORMONLY.colour_hex, 
	STYLE="noborder",
	SIZEPOLICY=FIXED, 
	STRETCH=NONE, 
	SCROLLBARS=NONE, 
	HEIGHT=64 PIXELS, WIDTH=128 PIXELS,
	COMPONENTTYPE="colour";

LABEL l007 : lpric, TEXT="Price", JUSTIFY=RIGHT;
f007 = FORMONLY.price;
LABEL l008 : lcost, TEXT="Cost", JUSTIFY=RIGHT;
f008 = FORMONLY.cost;
LABEL l009 : ltax, TEXT="Tax Code", JUSTIFY=RIGHT;
f009 = FORMONLY.tax_code;
LABEL l010 : ldisc, TEXT="Discount Code", JUSTIFY=RIGHT;
f010 = FORMONLY.disc_code;

LABEL l011 : lphys, TEXT="Physical", JUSTIFY=RIGHT;
f011 = FORMONLY.physical_stock;
LABEL l012 : lallo, TEXT="Allocated", JUSTIFY=RIGHT;
f012 = FORMONLY.allocated_stock, NOENTRY;
LABEL l013 : lfree, TEXT="Free", JUSTIFY=RIGHT;
f013 = FORMONLY.free_stock, NOENTRY;

TEXTEDIT f014 = FORMONLY.long_desc;

LABEL l015 : lurl, TEXT="Image Url", JUSTIFY=RIGHT;
f015 = FORMONLY.img_url;
IMAGE f016 = FORMONLY.img, SIZEPOLICY=FIXED, STYLE="noborder";


